<div class="product-container">
  <h1 class="product-title"><%= @product.name %></h1>
  <p class="product-description"><%= @product.description %></p>

  <% if @product.featured_image.attached? %>
    <div class="product-image">
      <%= image_tag @product.featured_image, alt: @product.name %>
    </div>
  <% end %>

  <div class="product-actions">
    <%= link_to "Back", products_path, class: "btn btn-back" %>
    <%= link_to "Edit", edit_product_path(@product), class: "btn btn-edit" %>
    <%= button_to "Delete", @product, method: :delete, class: "btn btn-delete", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
